{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": [
    "crates/oxc_linter/fixtures/**"
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "schedule": ["on monday"],
      "assignees": ["@Boshen"]
    },
    {
      "matchManagers": ["cargo"],
      "schedule": ["on monday"],
      "assignees": ["@Boshen"]
    },
    {
      "matchManagers": ["npm"],
      "schedule": ["on monday"],
      "assignees": ["@Boshen"],
      "includePaths": ["website/**"]
    }
  ]
}
